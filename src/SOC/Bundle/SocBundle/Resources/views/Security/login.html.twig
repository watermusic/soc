{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div class="blur">

        {#<img class="blur-background" src="{{ asset('bundles/socsoc/img/wm-titel.jpg') }}"/>#}


        <div class="row">
            <div class="small-6 large-centered columns">

                <form class="form" action="{{ path("fos_user_security_check") }}" method="post">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

                    <fieldset>

                        <h1>Login</h1>
                        {#<legend>Login</legend>#}

                        <div class="row">

                            <div class="columns large-12">
                                <label>{{ 'security.login.username'|trans }}
                                    <input type="text" class="form-control large-6" id="username" name="_username"
                                           placeholder="{{ 'security.login.username'|trans }}"
                                           value="{{ last_username }}"
                                           required="required"/></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="columns large-12">
                                <label>{{ 'security.login.password'|trans }}
                                    <input type="password" class="form-control large-6" id="password" name="_password"
                                           required="required"
                                           placeholder="{{ 'security.login.password'|trans }}"/></label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="columns large-12">
                                <label>{{ 'security.login.remember_me'|trans }}
                                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                                </label>
                            </div>

                        </div>

                        <div class="row">
                            <div class="columns large-12">
                                <input type="submit" class="small radius button small-4" id="_submit"
                                       name="_submit"
                                       value="{{ 'security.login.submit'|trans }}"/></div>
                        </div>
                    </fieldset>

                </form>

            </div>
        </div>

        <canvas class="blur-background" width="200" height="200" id="blurCanvas" data-canvas></canvas>
        <img data-canvas-image style="display: none" src="{{ asset('bundles/socsoc/img/wm-titel.jpg') }}" />

    </div>

{% endblock fos_user_content %}